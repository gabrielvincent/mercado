templ Index(
	expenses []expense.Expense,
	prevMonthCompareInfo *expense.PreviousMonthCompareInfo,
) {
	@l.Layout() {
		<div class="p-4">
			<button onclick="alert('Click me!')">Click me!</button>
			<h1 class="font-bold text-lg mb-4">Olá, { ctx.Value("name").(string) },</h1>
			<p>
				hoje é o 
				<span class="font-semibold">{ strconv.Itoa(getCurrentDayOfMonth()) }º</span>
				dia do mês e você já gastou
				<span class="font-semibold">
					@Currency(expense.CalcTotal(expenses))
				</span>.
				Até agora, você gastou em média 
				@Currency(int(expense.CalcAvg(expenses)))
				{ " " }a cada ida ao mercado (foram já <span class="font-semibold">{ strconv.Itoa(len(expenses)) }</span>
				if len(expenses) > 1 {
					vezes,
				} else {
					vez,
				}
				uma média de
				<span class="font-semibold">{ strconv.FormatFloat(float64(len(expenses)) / float64(getCurrentDayOfMonth()) , 'f', 2, 64) }</span>
				idas ao mercado por dia, o que dá uma média de
				<span class="font-semibold">
					@Currency(int(float64(expense.CalcTotal(expenses)) / float64(getCurrentDayOfMonth())))
				</span> gastos por dia!)
				Você acha bonita uma coisa dessas?
			</p>
			if prevMonthCompareInfo != nil {
				<p class="mt-4">
					@PreviousMonthCompare(prevMonthCompareInfo)
				</p>
			}
			<p class="mt-4">
				@Sessions(expenses, prevMonthCompareInfo, getCurrentDayOfMonth())
			</p>
			<p class="mt-4">
				<div data-defer-id="grocery-stores-ranking">
					O mercado que você mais visitou foi o ---. Você lá esteve --- vezes. O ranking é esse aqui:
					<div class="w-full flex flex-col justify-between gap-2 p-3 bg-gray-100 rounded-lg">
						<div>Loading...</div>
						<div>---</div>
						<div>------</div>
						<div>----</div>
					</div>
				</div>
			</p>
		</div>
	}
}
